<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp">


    <RelativeLayout
        android:id="@+id/lvl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_alignParentStart="true"
        android:paddingEnd="16dp"
        >

        <ImageView
            android:id="@+id/Titelbild_1"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
       />

        <RelativeLayout
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="0dp"
            android:layout_toLeftOf="@+id/Titelbild_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/Endlezz_Info1"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/Endlezz_Info"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/Endlezz_Info2"
            android:layout_width="fill_parent"
            android:layout_height="25dp"

            android:layout_below="@+id/Endlezz_Info1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/Endlezz_Info3"
            android:layout_width="fill_parent"
            android:layout_height="25dp"

            android:layout_below="@+id/Endlezz_Info2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/Endlezz_Info"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:textColor="@android:color/holo_orange_light"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/lvl1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_green_light">

    </LinearLayout>
</RelativeLayout>
