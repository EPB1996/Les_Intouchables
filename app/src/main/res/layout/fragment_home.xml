<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Home"
    android:background="@android:color/background_dark">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ViewPagerContainer"

        android:layout_width="match_parent"
        android:layout_height="256dp"
        >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
           >

        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
        android:id="@+id/tabDots"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"/>
    </RelativeLayout>

</LinearLayout>


    <RelativeLayout
        android:id="@+id/contentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="277dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_horizontal"

        >


        <Button
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_orange_light"
            android:background="@drawable/border"
            android:textSize="13dp"
            android:id="@+id/Newsletter"
            android:text="Newsletter abonnieren"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:weightSum="3"
            android:layout_below="@+id/Newsletter"
            android:layout_marginTop="35dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp">


                <TextView

                    android:id="@+id/FotosTitel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="FOTOS"
                    android:textColor="@android:color/background_light"
                    android:gravity="center"/>

                <ImageButton
                    android:layout_marginTop="5dp"
                    android:id="@+id/Fotos"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/FotosTitel"/>

             </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp">


                <TextView
                    android:id="@+id/VideosTitel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="VIDEOS"
                    android:gravity="center"
                    android:textColor="@android:color/background_light"/>

                <ImageButton
                    android:layout_marginTop="5dp"
                    android:id="@+id/Videos"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/VideosTitel"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp">


                <TextView
                    android:id="@+id/FollowTitel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="FOLLOW US"
                    android:gravity="center"
                    android:textColor="@android:color/background_light"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/FollowTitel"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"/>

                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/Instagram"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"/>
        </LinearLayout>


            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>
